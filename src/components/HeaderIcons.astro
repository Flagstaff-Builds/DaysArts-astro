---
import PhoneMobileIcon from "./icons/PhoneMobileIcon.astro";
import AtSymbolIcon from "./icons/AtSymbolIcon.astro";
import { contactInfo, formatPhoneForTel, formatPhoneDisplay } from '@/utils/contactInfo';

const phoneForTel = contactInfo.phone ? formatPhoneForTel(contactInfo.phone) : '';
const phoneDisplay = contactInfo.phone ? formatPhoneDisplay(contactInfo.phone) : '';
---

<div class="flex flex-wrap gap-x-2 text-sm leading-7 text-slate-300 py-2 sm:py-0">
  <p class="flex font-semibold">
    showtimes <span class="inline md:hidden">:</span>
  </p>
  {contactInfo.phone && (
    <div class="flex">
      <PhoneMobileIcon class="mt-1 h-5 w-5 flex-none" />
      <a href={`tel:${phoneForTel}`} class="whitespace-nowrap text-sm leading-7 text-slate-300" aria-label={`Call us at ${phoneDisplay}`}>{phoneDisplay}</a>
    </div>
  )}

  <div class="flex">
    <AtSymbolIcon class="mt-1 h-5 w-5 flex-none" />
    <a href={`mailto:${contactInfo.email}`} class="whitespace-nowrap text-sm leading-7 text-slate-300" aria-label={`Email us at ${contactInfo.email}`}>{contactInfo.email}</a>
  </div>
</div>
