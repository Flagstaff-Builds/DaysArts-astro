---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

type Props = {
  event: CollectionEntry<'event'>;
};

const { event } = Astro.props;
---
<!-- This is the individual post that gets looped into the events page template -->


  <li>
    <a href={`/event/${event.slug}`} class="block text-zinc-900 hover:underline">
      {event.data.poster && (
        <Image
        src={event.data.poster}
        format="avif"
        quality="mid"
        width={800}
        height={450 / 1.5}
        alt={`${event.data.title} thumbnail`}
        class="aspect-[3/2] w-full rounded-2xl object-cover"
        />
      )}
      <h3 class="mt-6 text-lg font-semibold leading-8 text-gray-900">{event.data.title}</h3>
      <p class="text-base leading-7 text-gray-600">{event.data.date}</p>
      <p class="mt-4 text-base leading-7 text-gray-600">{event.data.description}.</p>
    </a>
  </li>


