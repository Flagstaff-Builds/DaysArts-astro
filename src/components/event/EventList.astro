---
import type { CollectionEntry } from 'astro:content';
import EventPost from './EventPost.astro';

type Props = {
  eventEntries: CollectionEntry<'event'>[];
};

const { eventEntries } = Astro.props;
---


<div class="mx-auto grid grid-cols-1 gap-x-8 gap-y-20 xl:grid-cols-3">
  <div class="mx-auto max-w-2xl lg:mx-0">
    <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">At the Palace Theatre in Daysland</h2>
    <p class="mt-6 text-lg leading-8 text-gray-600">All six concerts $180 or $35 per event.</p>
  </div>




  <ul role="list" class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-2">
    {eventEntries.map((eventEntry) => (
        <EventPost event={eventEntry} />
    ))}
  </ul>
</div>
