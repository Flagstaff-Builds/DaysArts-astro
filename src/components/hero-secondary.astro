---
interface Props {
  tagline?: string;
  title?: string;
  content?: string;
}

const { title, tagline, content } = Astro.props;
---

<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <p class="text-base font-semibold leading-7 text-indigo-600">{tagline}</p>
      <h2 class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">{title}</h2>
      <p class="mt-6 text-lg leading-8 text-gray-600">{content}</p>
    </div>
  </div>
</div>