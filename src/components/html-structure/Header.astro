---
import HeroWithImageTiles from "../tailwindUI/Marketing/Page-Sections/Hero-Sections/with-image-tiles.vue";
import { DevicePhoneMobileIcon, AtSymbolIcon } from "@heroicons/vue/20/solid";
---
<div class="sticky top-0 z-10 bg-white shadow-[0_1px_3px_rgba(15,23,42,0.08)]">
  <div class="hidden lg:block w-full sticky top-0 z-10">
    <div class="mx-auto flex max-w-7xl items-center justify-between p-2 lg:px-8">

      <div class="flex">
        <p class="text-sm font-semibold leading-7 text-slate-400">
          Daysland Palace Theatre
        </p>
      </div>

      <div class="flex gap-x-2 text-sm leading-7 text-slate-400">
        <p class="flex font-semibold">
          showtimes
        </p>
        <div class="flex">
          <DevicePhoneMobileIcon class="mt-1 h-5 w-5 flex-none text-slate-400" aria-hidden="true" />
          <a href="tel:+7806731325" class="whitespace-nowrap text-sm leading-7 text-slate-400" aria-label="Call us at 780-673-1325">780-673-1325</a>
        </div>

        <div class="flex">
          <AtSymbolIcon class="mt-1 h-5 w-5 flex-none text-slate-400" aria-hidden="true" />
          <a href="mailto:info@daysarts.ca" class="whitespace-nowrap text-sm leading-7 text-slate-400" aria-label="Email us at info@daysarts.ca">info@daysarts.ca</a>
        </div>
      </div>
    </div>
  </div>


  <div class="sm:py-8 md:py-2">
    <HeroWithImageTiles client:load></HeroWithImageTile>
  </div>
</div>