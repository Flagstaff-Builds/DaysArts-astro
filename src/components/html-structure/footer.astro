---
import navigation from '@/data/nav.json';
// icons don't import properly from the .json file so it's easier to do them when needed, as icons aren't always wanted in all navigation elements.
---

<footer aria-labelledby="footer-heading" class="bg-charade-800 text-white">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl px-6 pb-8 pt-16 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8 border-t border-gray-900/10 pt-8">
      <div class="space-y-8">

        <!-- Branding -->
        <div class="flex lg:flex-1">
          <a href="/" class="-m-1.5 p-1.5">
            <p class="w-auto font-black text-lg">DaysArts</p>
          </a>
        </div>

        <h2 class="text-regular mb-4">Daysland and District Cultural Arts Society</h2>
        <address itemscope itemtype="http://schema.org/Organization" class="text-sm leading-6">
          <span itemprop="name">Palace Theatre</span>
          <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
            <span itemprop="streetAddress">5012-50 Street</span><br>
            <span itemprop="addressLocality">Daysland</span>,
            <span itemprop="addressRegion">Alberta</span>
          </div>
          <p class="mt-4">
            <a href="tel:7803742403" itemprop="telephone" class="whitespace-nowrap font-semibold leading-7 text-white underline hover:no-underline">780-374-2403</a>
          </p>
        </address>

        <!-- Social media links -->
        <div class="flex space-x-6">
          <a href="https://www.facebook.com/profile.php?id=100063455833057" class="group flex items-center rounded-md bg-slate-100 text-slate-700 text-sm font-semibold pl-2 pr-3 py-2 cursor-pointer shadow-sm hover:bg-slate-200" target="_blank">
            <svg width="16" height="16" class="mr-1" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path fill="currentColor" d="M13.397 20.997v-8.196h2.765l.411-3.209h-3.176V7.548c0-.926.258-1.56 1.587-1.56h1.684V3.127A22.336 22.336 0 0 0 14.201 3c-2.444 0-4.122 1.492-4.122 4.231v2.355H7.332v3.209h2.753v8.202z"/>
            </svg>
            DaysArts
          </a>
        </div>
      </div>


      <!-- Footer menu system -->
      <div class="mt-16 md:flex xl:col-span-2 xl:mt-0">
        {navigation.map((item) => (
          <div class="flex-1 md:gap-8 mt-10 md:mt-0">
            {item.dropdown ? (
              <div>
                <h3 class="text-sm font-semibold leading-6 text-white">{item.name}</h3>
                <ul role="list" class="mt-6 space-y-4">
                  {item.dropdownItems.map((dropdownItem) => (
                    <li>
                      <a href={dropdownItem.href} class="text-sm leading-6 text-white hover:text-gray-200 underline hover:underline-offset-4">{dropdownItem.name}</a>
                    </li>
                  ))}

                  {/* Check for and render CTA items */}
                  {item.cta && item.cta.map((ctaItem) => (
                    <li>
                      <a href={ctaItem.href} class="text-sm leading-6 text-white hover:text-gray-200 underline hover:underline-offset-4">{ctaItem.name}</a>
                    </li>
                  ))}
                </ul>
              </div>
            ) : (
              <a href={item.href} class="text-sm leading-6 text-white hover:text-gray-200 underline hover:underline-offset-4">
                <h3>{item.name}</h3>
              </a>
            )}
          </div>
        ))}
      </div>

    </div>

    <div class="mt-16 border-t border-gray-900/10 pt-8 sm:mt-20 lg:mt-24">
      <p class="text-xs leading-5 text-gray-300">&copy; Daysland and District Cultural Arts Society. All rights reserved.</p>
    </div>
  </div>
</footer>


<style is:global>
  address { font-style: normal; }
</style>