---
import MovieCard from './MovieCard.astro';
import type { CollectionEntry } from 'astro:content';

type Props = {
  movie: CollectionEntry<'movie'>;
};

const { movie } = Astro.props as Props;
---

<MovieCard 
  movie={movie} 
  variant="detailed" 
  showDescription={false}
  showCast={true}
  showGenre={true}
  showSponsor={true}
  showEventNote={true}
  showShowtimes={true}
/>