---
import Header from "@components/html-structure/Header.astro";
import Footer from "@components/html-structure/footer.astro";
import BackgroundImg from '@assets/palace-theatre-daysland-alberta.jpg';
import '../styles/base.css';

interface Props {
  title?: string;
  description?: string;
  socialImage?: string;
  ogType?: string;
}

const { title, description, socialImage="/social-image.jpg", ogType="website" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Performance optimizations -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.youtube.com" />
    <link rel="dns-prefetch" href="https://vimeo.com" />
    
    <!-- Additional performance optimizations -->
    <link 
      rel="preload" 
      as="image" 
      href={BackgroundImg.src} 
      type="image/jpeg"
      media="(min-width: 768px)"
      fetchpriority="high"
    />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(socialImage, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(socialImage, Astro.url)} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap.xml" />

    <!-- CMS -->
    <!-- <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script> -->


  </head>

  <body>
    <!-- <TopContact /> -->

    <Header />

    <slot/>

    <Footer />

    <!-- <script>
      declare global {
        interface Window {
          netlifyIdentity: any;
        }
      }

      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user: any) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script> -->

    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      html {
        font-family: system-ui, sans-serif;
        background: #f6f6f6;
        background-size: 224px;
        scroll-behavior: smooth;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      /* Optimize scroll performance */
      * {
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
      }

      /* Use transform instead of position: sticky for better performance */
      .sticky-element {
        position: fixed;
        transform: translateZ(0);
        will-change: transform;
      }

      /* Enable hardware acceleration for smoother scrolling */
      body {
        transform: translateZ(0);
        -webkit-transform: translateZ(0);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Optimize animations */
      @media (prefers-reduced-motion: no-preference) {
        .animated {
          will-change: transform;
        }
      }
    </style>

  </body>
</html>
