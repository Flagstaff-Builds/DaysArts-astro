---
import Layout from '../../layouts/Layout.astro';
import ProtectedRoute from '../../components/auth/ProtectedRoute.vue';
---

<Layout title="Admin Dashboard - Days Arts">
    <ProtectedRoute client:load>
        <div class="container mx-auto px-4 py-8">
            <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <a href="/admin/movies" class="p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
                    <h2 class="text-xl font-semibold mb-2">Manage Movies</h2>
                    <p class="text-gray-600">Add, edit, or remove upcoming movies</p>
                </a>
                <a href="/admin/events" class="p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
                    <h2 class="text-xl font-semibold mb-2">Manage Events</h2>
                    <p class="text-gray-600">Add, edit, or remove upcoming events</p>
                </a>
            </div>
        </div>
    </ProtectedRoute>
</Layout>
