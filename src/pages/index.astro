          <div class="flex flex-col lg:grid grid-cols-7 gap-4">
            {events.map((event, index) => {
              const isColSpan2 = index % 7 === 2 || index % 7 === 3 || index % 7 === 6;
              const isRowSpan2 = index % 7 === 1 || index % 7 === 2 || index % 7 === 3;
              const colSpan = isColSpan2 ? 'col-span-2' : index % 7 === 0 ? 'col-span-4' : 'col-span-3';
              const rowSpan = isRowSpan2 ? 'row-span-2' : '';
              const flexClass = isColSpan2 && isRowSpan2 ? 'flex-row' : 'flex-col';

              return (
                <article class={`rounded-lg shadow-lg overflow-hidden transform transition duration-500 hover:scale-105 ${colSpan} ${rowSpan}`}>
                  <a href={`/event/${event.slug}`}>
                    <div class={`flex md:${flexClass}`}>
                      {event.data.poster && (
                        <div class="max-w-40">
                          <Image
                            src={event.data.poster}
                            width="850"
                            height="504"
                            alt="Event Poster"
                            class="object-cover h-full w-full"
                          />
                        </div>
                      )}
                      <div class="p-4 bg-white">
                        <h3 class="text-xl font-semibold text-gray-900">{event.data.title}</h3>
                        <p class="mt-2 text-gray-500">{event.data.description}</p>
                      </div>
                    </div>
                  </a>
                </article>
              );
            })}
